<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="StyledLabel" TargetType="{x:Type Label}">
        <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundColor}"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBlackColor}"></Setter>
        <Setter Property="FontSize" Value="{DynamicResource textFontSize}"></Setter>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style>
</ResourceDictionary>