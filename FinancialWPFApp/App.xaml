<Application x:Class="FinancialWPFApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FinancialWPFApp"
             StartupUri="UI/Views/Admin/MainWindowView.xaml">
    <Application.Resources>
         <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Theme Resource -->
                <ResourceDictionary Source="/UI/Themes/LightTheme.xaml" />
                
                <!-- Icon Resource -->
                <ResourceDictionary Source="/Assets/Icons/Icons.xaml" />
                
                <!-- Style Resource -->
                <ResourceDictionary Source="/UI/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="/UI/Styles/ButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
