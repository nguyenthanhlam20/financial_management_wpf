<Application x:Class="FinancialWPFApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FinancialWPFApp"
             StartupUri="UI/Public/Views/MainWindowView.xaml">
    <Application.Resources>
         <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Theme Resource -->
                <ResourceDictionary Source="/Themes/LightTheme.xaml" />
                
                <!-- Icon Resource -->
                <ResourceDictionary Source="/Assets/Icons/Icons.xaml" />
                
                <!-- Style Resource -->
                <ResourceDictionary Source="/Styles/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="/Styles/ButtonStyle.xaml" />
                <ResourceDictionary Source="/Styles/LabelStyle.xaml" />

                <!-- Values Resources -->
                <ResourceDictionary Source="/Assets/Values/Sizes.xaml" />
                <ResourceDictionary Source="/Assets/Values/Strings.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
